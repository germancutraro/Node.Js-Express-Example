<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <title>Basic Example Node.js Express By germancutraro</title>
      <link rel="stylesheet" href="/public/css/main.css">
      <link rel="stylesheet" href="/public/css/materialize.min.css"/>
   </head>
   <body>
      <section id="global-container">
         <div class="container">
         <div class="row">
         <form action="/add" method="post" class="col s12">
            <div class="row">
               <div class="input-field col s12">
                  <input placeholder="Item" id="ItemName" type="text" class="validate" name="name">
                  <input placeholder="item Category" id="ItemCategory" type="text" class="validate" name="category">
                  <input placeholder="Item Price" id="Price" type="number" min="1" max="1000" class="validate" name="price">
                  <label for="ItemName">Write Something</label>
                  <input type="submit" class="waves-effect waves-light btn" value="Add">
         </form>
         </div>
         </div>
         <table>
            <thead>
               <tr>
                  <th data-field="id">Item Name</th>
                  <th data-field="name">Category</th>
                  <th data-field="price">Item Price</th>
               </tr>
            </thead>
            <tbody>
               <% for (item of items) { %>
                 <tr>
                    <td><%= item.name %></td>
                    <td><%= item.category %></td>
                    <td>$<%= item.price %>.00</td>
                 </tr>
               <% } %>
            </tbody>
         </table>
      </section>
      <script src="/public/js/jquery.js"></script>
      <script src="/public/js/materialize.min.js"></script>
   </body>
</html>
